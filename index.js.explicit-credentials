// 0) Primeras lÃ­neas: configuraciÃ³n de credenciales explÃ­citas
import fs from 'fs';
import path from 'path';
import chalk from 'chalk';

// FunciÃ³n para obtener credenciales desde diferentes fuentes
function getCredentials() {
  try {
    console.log(chalk.blue('ğŸ”§ [Setup]') + ' Obteniendo credenciales...');
    
    // OpciÃ³n 1: Desde variable de entorno GOOGLE_CREDENTIALS (JSON completo)
    if (process.env.GOOGLE_CREDENTIALS) {
      try {
        console.log(chalk.blue('ğŸ”§ [Setup]') + ' Usando GOOGLE_CREDENTIALS');
        return JSON.parse(process.env.GOOGLE_CREDENTIALS);
      } catch (error) {
        console.error(chalk.red('âŒ [Error]'), 'Error al procesar GOOGLE_CREDENTIALS:', error.message);
      }
    }
    
    // OpciÃ³n 2: Desde variable de entorno FIREBASE_JSON (base64)
    if (process.env.FIREBASE_JSON) {
      try {
        console.log(chalk.blue('ğŸ”§ [Setup]') + ' Usando FIREBASE_JSON (base64)');
        const raw = Buffer.from(process.env.FIREBASE_JSON, 'base64').toString('utf8');
        return JSON.parse(raw);
      } catch (error) {
        console.error(chalk.red('âŒ [Error]'), 'Error al procesar FIREBASE_JSON:', error.message);
      }
    }
    
    // OpciÃ³n 3: Desde archivo serviceAccount.json en la raÃ­z
    if (fs.existsSync('./serviceAccount.json')) {
      try {
        console.log(chalk.blue('ğŸ”§ [Setup]') + ' Usando ./serviceAccount.json');
        const raw = fs.readFileSync('./serviceAccount.json', 'utf8');
        return JSON.parse(raw);
      } catch (error) {
        console.error(chalk.red('âŒ [Error]'), 'Error al leer serviceAccount.json:', error.message);
      }
    }
    
    // OpciÃ³n 4: Desde archivo serviceAccount.json en /app
    if (fs.existsSync('/app/serviceAccount.json')) {
      try {
        console.log(chalk.blue('ğŸ”§ [Setup]') + ' Usando /app/serviceAccount.json');
        const raw = fs.readFileSync('/app/serviceAccount.json', 'utf8');
        return JSON.parse(raw);
      } catch (error) {
        console.error(chalk.red('âŒ [Error]'), 'Error al leer /app/serviceAccount.json:', error.message);
      }
    }
    
    throw new Error('No se pudieron obtener credenciales de ninguna fuente');
  } catch (error) {
    console.error(chalk.red('âŒ [Fatal Error]'), 'Error al obtener credenciales:', error);
    process.exit(1);
  }
}

// Obtener credenciales
const credentials = getCredentials();
console.log(chalk.green('âœ… [Setup]') + ` Credenciales obtenidas para proyecto: ${credentials.project_id}`);

// â€” Ahora sÃ­, importa todo lo demÃ¡s â€”
import 'dotenv/config';
import express from 'express';
import compression from 'compression';
import cors from 'cors';
import qrcode from 'qrcode-terminal';
import { WebhookClient } from 'dialogflow-fulfillment';
import { SessionsClient } from '@google-cloud/dialogflow';
import admin from 'firebase-admin';
import OpenAI from 'openai';
import whatsappWeb from 'whatsapp-web.js';

const { Client, LocalAuth } = whatsappWeb;

// Verifica que el ID del proyecto estÃ© configurado
if (!process.env.GOOGLE_PROJECT_ID) {
  console.error(chalk.red('âŒ [Error]'), 'La variable GOOGLE_PROJECT_ID no estÃ¡ configurada');
  process.exit(1);
}

try {
  // Inicializa Firebase Admin con credenciales explÃ­citas
  console.log(chalk.blue('ğŸ”§ [Setup]') + ' Inicializando Firebase Admin con credenciales explÃ­citas...');
  admin.initializeApp({
    credential: admin.credential.cert(credentials)
  });
  const firestore = admin.firestore();
  console.log(chalk.green('âœ… [Setup]') + ' Firebase Admin inicializado correctamente');

  // Dialogflow con credenciales explÃ­citas
  console.log(chalk.blue('ğŸ”§ [Setup]') + ' Configurando Dialogflow con credenciales explÃ­citas...');
  const projectId = process.env.GOOGLE_PROJECT_ID;
  const dfClient = new SessionsClient({ 
    projectId,
    credentials: credentials,
    timeout: 10000 
  });
  console.log(chalk.green('âœ… [Setup]') + ' Cliente de Dialogflow configurado correctamente');

  // OpenAI
  if (!process.env.OPENAI_API_KEY) {
    console.warn(chalk.yellow('âš ï¸ [Warning]'), 'La variable OPENAI_API_KEY no estÃ¡ configurada. Las respuestas de fallback no funcionarÃ¡n.');
  }
  const openai = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

  // WhatsApp
  console.log(chalk.blue('ğŸ”§ [Setup]') + ' Configurando cliente de WhatsApp...');
  const whatsappClient = new Client({
    authStrategy: new LocalAuth({
      clientId: 'bot',
      dataPath: '/app/session'
    }),
    puppeteer: {
      headless: true,
      args: [
        '--no-sandbox',
        '--disable-setuid-sandbox',
        '--disable-dev-shm-usage',
        '--no-first-run',
        '--disable-gpu'
      ],
      executablePath: process.env.PUPPETEER_EXECUTABLE_PATH
    }
  });

  // Handlers WhatsApp
  whatsappClient.on('qr', qr => {
    console.log(chalk.blue('ğŸ” [QR]') + ' Generating QR code:');
    qrcode.generate(qr, { small: true });
  });
  
  whatsappClient.on('ready', () =>
    console.log(chalk.green('âœ… [WhatsApp]') + ' Client ready')
  );
  
  whatsappClient.on('message', async msg => {
    console.log(chalk.yellow('ğŸ“¥ [Message]'), msg.from, '-', msg.body);
    try {
      const sessionPath = dfClient.projectAgentSessionPath(projectId, msg.from);
      const [dfRes] = await dfClient.detectIntent({
        session: sessionPath,
        queryInput: { text: { text: msg.body, languageCode: 'es' } }
      });
      const result = dfRes.queryResult;

      try {
        await firestore.collection('messages').add({
          from: msg.from,
          text: msg.body,
          intent: result.intent?.displayName || 'Unknown',
          timestamp: new Date()
        });
      } catch (firestoreError) {
        console.error(chalk.red('âŒ [Firestore Error]'), firestoreError);
        // ContinÃºa con la ejecuciÃ³n aunque falle Firestore
      }

      let reply = result.fulfillmentText;
      if (!reply && process.env.OPENAI_API_KEY) {
        try {
          const chat = await openai.chat.completions.create({
            model: 'gpt-3.5-turbo',
            messages: [
              { role: 'system', content: 'Eres un asistente conversacional Ãºtil.' },
              { role: 'user', content: msg.body }
            ]
          });
          reply = chat.choices[0].message.content.trim();
        } catch (openaiError) {
          console.error(chalk.red('âŒ [OpenAI Error]'), openaiError);
          reply = "Lo siento, no puedo procesar tu solicitud en este momento.";
        }
      } else if (!reply) {
        reply = "Lo siento, no entendÃ­ tu mensaje y el servicio de respaldo no estÃ¡ disponible.";
      }

      await whatsappClient.sendMessage(msg.from, reply);
      console.log(chalk.magenta('ğŸ“¤ [Sent]'), reply);
    } catch (err) {
      console.error(chalk.red('âŒ [Error]'), err);
      try {
        await whatsappClient.sendMessage(msg.from, "Lo siento, ocurriÃ³ un error al procesar tu mensaje. Por favor, intÃ©ntalo de nuevo mÃ¡s tarde.");
      } catch (sendError) {
        console.error(chalk.red('âŒ [Send Error]'), sendError);
      }
    }
  });

  // Express
  const app = express();
  app.use(compression());
  app.use(cors());
  app.use(express.json());

  app.get('/healthz', (_req, res) => {
    res.send('OK');
  });

  app.post('/dialogflow-webhook', (req, res) => {
    const agent = new WebhookClient({ request: req, response: res });
    const map = new Map([
      ['Default Welcome Intent', a => a.add('Â¡Hola! Â¿En quÃ© puedo ayudarte?')],
      ['Default Fallback Intent', a =>
        a.add('Lo siento, no entendÃ­. Â¿PodrÃ­as reformularlo?')
      ]
    ]);
    agent.handleRequest(map);
  });

  app.post('/send', async (req, res) => {
    const { numero, mensaje } = req.body;
    if (!numero || !mensaje)
      return res.status(400).json({ error: 'Missing parameters' });
    try {
      await whatsappClient.sendMessage(`${numero}@c.us`, mensaje);
      res.json({ success: true });
    } catch (e) {
      console.error(chalk.red('âŒ [Error]'), e);
      res.status(500).json({ error: 'Failed to send message' });
    }
  });

  // Endpoint para verificar el estado de las credenciales
  app.get('/check-credentials', (_req, res) => {
    try {
      res.json({ 
        status: 'OK', 
        credentials: {
          type: credentials.type,
          project_id: credentials.project_id,
          client_email: credentials.client_email
        }
      });
    } catch (error) {
      res.status(500).json({ 
        status: 'ERROR', 
        message: error.message 
      });
    }
  });

  const PORT = process.env.PORT || 3000;
  const HOST = '0.0.0.0';
  
  // Inicializa WhatsApp
  console.log(chalk.blue('ğŸ”§ [Setup]') + ' Inicializando cliente de WhatsApp...');
  whatsappClient.initialize();
  
  // Inicia el servidor Express
  app.listen(PORT, HOST, () =>
    console.log(chalk.green('ğŸš€ [Server]') + ` Listening on ${HOST}:${PORT}`)
  );
  
} catch (error) {
  console.error(chalk.red('âŒ [Fatal Error]'), 'Error al inicializar la aplicaciÃ³n:', error);
  process.exit(1);
}
